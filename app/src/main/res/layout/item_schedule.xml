<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable
            name="scheduleViewModel"
            type="com.rigel.comperio.viewmodel.ItemScheduleViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/item_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ampm_text_color"
        android:onClick="@{(v) -> vm.onClick()}"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imgTeacherItem"
            android:contentDescription="@string/ctDescTeacherPic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTeacherNameItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@{vm.schedule.teacherName}"
                    android:textSize="20sp"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@{vm.schedule.rating}"
                    android:textSize="20sp"
                    tools:text="3.5" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtPriceHourItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@{vm.schedule.hourPrice}"
                android:textSize="20sp"
                tools:text="U$40.00/hour" />

            <TextView
                android:id="@+id/txtDistanceItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="@{vm.schedule.distance}"
                android:textSize="20sp"
                tools:text="4km" />

        </LinearLayout>

    </LinearLayout>
</layout>